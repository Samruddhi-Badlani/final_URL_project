    <div class="main">
        <div id="content">
            <form action="http://localhost:3000/example" method="POST" id="my_form">

                <input type="text" id="task2" placeholder="Name" class="g1" autocomplete="false" name="add_url_name"
                    required>

                <input type="text" id="task" placeholder="URL" class="g1" autocomplete="false" name="add_url" required>
                <input type="submit" class="g1" id="add" value="ADD">
            </form>

            <form action="http://localhost:3000/status" method="GET">
                <button type="submit" class="g1" id="status" onclick="add_bar()">CHECK STATUS</button>
            </form>
            {+section /}

            </section>


        </div>
        <div id="combined">
